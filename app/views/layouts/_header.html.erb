          <li class="mr-3"><u><%= link_to 'Log out', destroy_admin_session_path, method: :delete, class:'text-dark nav-link' %></u></li>
          <li class="mr-3">
            <%= link_to admin_notices_path, class:"text-dark nav-link" do %>
              <i class="fa-solid fa-bullhorn"></i>
            <% end %>
          </li>
