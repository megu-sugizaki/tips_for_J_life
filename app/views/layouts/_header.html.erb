    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav offset-6 text-right">
        <!--M:When signed in as an admin-->
        <% if request.fullpath.include?("/admin") && admin_signed_in? %>
