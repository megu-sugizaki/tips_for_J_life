    <!--< end %>-->
  <% end %>
</div>

<div>
  <%= form_with model: [problem, problem_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "Give some comments here. Help out your buddy!" %>
    <%= f.submit "Post comment" %>
  <% end %>
</div>