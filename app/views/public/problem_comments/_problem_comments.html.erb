<div>
  <% problem.problem_comments.each do |problem_comment| %>
    <p><%= image_tag problem_comment.user.get_profile_image(100,100) %></p>
    <%= problem_comment.user.first_name %>
    <%= problem_comment.user.middle_name %>
    <%= problem_comment.user.last_name %>
    <%= problem_comment.created_at.strftime('%Y/%m/%d') %><%= problem_comment.comment %>
    <% if problem_comment.user == current_user || problem_comment.user == problem.user %>
      <%= link_to "Delete comment", problem_problem_comment_path(problem_comment, problem_comment.problem), method: :delete %>
    <% end %>
    
    <!--< if user_signed_in? && (current_user == problem_comment.user) %>-->
