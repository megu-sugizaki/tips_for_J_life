<!--Indent fixed-->
<div class="row justify-content-center text-center px-1">
  <%= render 'layouts/errors', obj: @contact %>
</div>
<div class="container">
  <div class="row pt-5 pb-3 justify-content-center">  
    <div class="col-md-4 text-center">
      <h3>*Contact form*</h3>
    </div>
  </div> 
  <div class="row justify-content-center pb-3">
    <%= form_with(model: @contact, local: true) do |f| %>
      <div class="correct-msg-box">
        <!--Email form-->
        <div class="correct-msg-main">
          <div class="contact-form">
            <div class="correct-text-field pb-3">
              <div>Name</div>
              <%= f.text_field :name, placeholder: "Name", class: "input-form" %>
            </div>
            <div class="correct-text-field pb-3">
              <div>Contact details</div>
              <%= f.text_area :content, placeholder: "Insert your contact details", class: "input-form" %>
            </div>
            <div class="send-btn-contents">
              <div class="register-btn">
                <%= f.button type: "submit", class:"btn btn-info" do %> 
                  Send <i class="fas fa-paper-plane"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>