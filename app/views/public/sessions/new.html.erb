<div class="container mt-5">
  <div class="row mt-3 mb-3">  
    <h3>*Sign in*</h3>
  </div>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row mt-3 mb-3">
     <h4>Insert email and passwords to log in!</h4>
    </div>
    <div class="field row">
      <%= f.label :"Email",class:"col-lg-3 " %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"col-lg-3 mb-2" %>
    </div>
  
    <div class="field row">
      <%= f.label :"Passwords",class:"col-lg-3 " %>
      <%= f.password_field :password, autocomplete: "current-password",class:"col-lg-3 mb-2" %>
    </div>
  
    <% if devise_mapping.rememberable? %>
    <% end %>
  
    <div class="actions row">
      <div class="col-lg-3 "></div>
      <%= f.submit "Sign in",class: "btn btn-sm btn-info px-5 mb-2 " %>
    </div>
    
  <% end %>
  
    <div class="row py-5">
      Haven't signed up yet?　
      Click here to　<%= render "public/shared/links" %>!
    </div>

</div>