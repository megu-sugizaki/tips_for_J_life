<div class="container">
    <div class="row">
        <div class="col-md-4 text-center mt-4">
            <!--search box-->
            <%= render "search", keyword: @keyword %>
            
            <!--To post problem-->
            <h6>Have problems to share?</h6>
            <h5>Post problems!</h5>
            <%= render 'public/problems/post_problem', problem: @problem, problem_tag: @problem_tag %>
        </div>
        
        <div class="col-md-8 mt-4">
            <!--To show index-->
        <div class="text-center pb-2">
            <h5>Problems posted</h5>
            <h6>Help your buddies by giving them comments!</h6>
        </div>
            <%= render 'public/problems/index_problem', problems: @problems %>
        </div>
    </div>
</div>

