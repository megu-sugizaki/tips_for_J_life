            <%= render 'public/problems/post_problem', problem_new: @problem_new, problem_tag: @problem_tag, problem: @problem %>
        </div>
        
        <div class="col-md-6 mt-4 pr-3">
            <!--M:To show index-->
        <div class="text-center pb-2">
            <h5>Problems posted</h5>
            <h6>Help your buddies by giving them comments!</h6>
        </div>
            <%= render 'public/problems/index_problem', problems: @problems %>
        </div>
    </div>
</div>

