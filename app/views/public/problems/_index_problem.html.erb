<div class="row border-bottom mt-2 pb-2">
        <div class="col-md-3">Posted by</div>
        <div class="col-md-2">Title</div>
        <div class="col-md-3">Caption</div>
        <div class="col-md-1"><i class="fa-solid fa-comments"></i></div>
        <div class="col-md-1"><i class="fa-solid fa-heart"></i></div>
    </div>

<% problems.each do |problem| %>
<div class="row border-bottom mt-1 align-items-center">
  <div class="col-md-3">
    <%= image_tag(problem.user.profile_image, width:50, height: 50) %>
    <p><%= link_to problem.user.first_name + " " + problem.user.last_name, user_path(problem.user.id) %></p>
  </div>
  <div class="col-md-2">
    <%= link_to problem.title, problem_path(problem) %>
  </div>
  <div class="col-md-3">
    <%= problem.caption %>
  </div>
  <div class="col-md-1">
    <%= render 'public/problem_comments/count_problem_comments', problem:problem %>
  </div>
  <div class="col-md-1">
      <!--Favorite partial template to be added-->
  </div>
</div>
<% end %>