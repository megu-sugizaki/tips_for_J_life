
<%= form_with model: problem do |f| %>
    
    <div>Title</div>
    <%= f.text_field :title, placeholder: "title" %>
    
    <div>Caption</div>
    <%= f.text_area :caption, placeholder: "Descrive your problem here" %>
    
    <div>Image</div>
    <%= f.file_field :problem_images, multiple: true, class: 'form-control' %>
    
    <div>Tag</div>
    Choose tags
    <%#= f.select :problem_tag_id, select_array, include_blank: "--Choose tags!--", multiple: true %>
    <!--M:Description below is easier & faster-->
    <%#= f.collection_select :problem_tag_id, ProblemTag.all, :id, :name, {include_blank: "--Choose tags!--"} %>
    <!-- M:changed to checkboxes to select multiple tags-->
    <%= f.collection_check_boxes(:problem_tag_ids, ProblemTag.all, :id, :name) do |b| %>
        <%= b.check_box %>
        <%= b.text %>
    <% end %>
    
    <%= f.submit "Post" %>
<% end %>

