<!--M:Indent fixed-->
<div class="container-fluid">
  <div class="row justify-content-center px-3">
    <%= render 'layouts/errors', obj: @user %>
  </div>
</div>
<div class="container">
  <div class="row pt-5 pb-3 justify-content-center">  
    <div class="col-md-5 text-center">
      <h3>*<%= t(".page_title") %>*</h3>
    </div>
  </div> 
  <%= form_with model:@user, url:users_information_path, method: :patch do |f| %>
    <div class="row justify-content-center">
      <div class="col-md-4 pb-2">
        <table>
          <tr>
            <th class="pr-4 pb-2"><%= t(".first_name") %></th>
            <th class="pr-4 pb-2"><%= t(".middle_name") %></th>
            <th class="pr-4 pb-2"><%= t(".last_name") %></th>
          </tr>
          <tr>
            <td class="pr-4 pb-2"><%= f.text_field :first_name %></td>
            <td class="pr-4 pb-2"><%= f.text_field :middle_name %></td>
            <td class="pr-4 pb-2"><%= f.text_field :last_name %></td>
          </tr>
        </table>
        <table>
          <tr><th class="pb-2"><%= t(".introduction") %></th></tr>
          <tr><td class="pb-2"><%= f.text_area :introduction %></td></tr>
        </table>
        <table>
          <tr><th class="pb-2"><%= t(".profile_image") %></th></tr>
          <td class="pb-2">
            <label>
              <%= t(".choose_file") %>
              <%= f.file_field :profile_image, class: 'form-control', id: 'fileBox'%>
            </label>
            <p id="fileBoxName"><%= t(".no_file") %></p>
          </td>
        </table>
        <table>
          <tr><th class="pb-2"><%= t(".language") %></th></tr>
          <tr>
            <td class="pb-2">
              <div class="pl-2">
                <%= f.radio_button :locale, :en %>
                English
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <div class="pl-2">
                <%= f.radio_button :locale, :ja %>
                やさしいにほんご
              </div>
            </td>
          </tr>
        </table>
      </div>
    </div>
    <div class="row justify-content-center pb-4">
      <div class="col-md-1"></div>
      <div class="col-md-2 pt-3"><%= f.submit t(".update_button"), class:"btn btn-info" %></div>
      <div class="col-md-3 pt-3"><%= link_to t(".delete_button"), users_check_path, class: 'btn btn-danger' %></div>
    </div>
  <% end %>
</div>