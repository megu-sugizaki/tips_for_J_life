<!--M:Indent fixed-->
<div class="container">
  <div class="row pt-5 pb-3 justify-content-center">  
    <div class="col-md-6 text-center">
      <h3>*<%= t(".page_title") %>*</h3>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-5">
      <% @events.each do |event| %>
        <% if event.users.include?(current_user) %>
          <div class="row border-bottom justify-content-center pb-2">
            <div class="col-md-5"><%= t(".title") %></div>
            <div class="col-md-7"><%= t(".caption") %></div>
          </div>
          <div class="row border-bottom justify-content-center py-2">
           <div class="col-md-5"><u><%= link_to event.title, event_path(event), class:"text-dark" %></u></div>
           <div class="col-md-7"><%= event.caption.truncate(30) %></div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>