<div class="container">
  <div class="row justify-content-center pt-5 mt-3">
    <div class="col-md-7 justify-content-center text-center">
      <h4><%= t(".confirmation") %></h4>
      <p class="pt-4">
        <%= t(".check_text1") %></br>
        <%= t(".check_text2") %></br>
        <%= t(".check_text3") %></br>
        <%= t(".check_text4") %>
      </p>
    </div>
