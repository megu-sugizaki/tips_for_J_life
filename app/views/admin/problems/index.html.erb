<div class="container">
  <div class="row justify-content-center">
  <div class="col-md-7">
    <div class="row my-4 justify-content-center align-items-center border-bottom">
        <div class="col-md-2 mt-3">Title</div>
        <div class="col-md-4 mt-3">Caption</div>
        <div class="col-md-3 mt-3">Posted by</div>
        <div class="col-md-3 mt-3">Remove Post</div>
    </div>
    <% @problems.each do |problem| %>
        <div class="row py-2 justify-content-center border-bottom align-items-center">
          <div class="col-md-2">
            <%= link_to problem.title, admin_problem_path(problem) %>
          </div>
          <div class="col-md-4">
            <%= problem.caption %>
          </div>
          <div class="col-md-3">
            <%= image_tag problem.user.get_profile_image(50, 50) %>
            <%= link_to problem.user.first_name + problem.user.last_name, user_path(problem.user) %>
          </div>
          <div class="col-md-3">
            <%= link_to "Delete post", admin_problem_path(problem), method: :delete, class:"btn btn-danger btn-sm" %>
          </div>
        </div>
    <% end %>
  </div>
  </div>
</div>