<div class="container-fluid">
  <div class="row text-center mx-1">
    <div class="flash-message notice"><%= flash[:notice] %></div>
  </div>
</div>
<div class="container">
  <div class="row pt-5 pb-3 justify-content-center">  
    <div class="col-md-6 text-center">
      <h3>*Notice details*</h3>
    </div>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-md-4 text-center">
      <h4><%= @notice.title %></h4>
    </div>
  </div>
  <div class="row justify-content-center pt-3">
    <div class="col-md-4 border">
      <%= simple_format(@notice.detail) %>
    </div>
  </div>
  <div class="row justify-content-center py-2">
    <div class="col-md-4">
      Created at: <%= @notice.created_at.strftime('%Y/%m/%d') %>
    </div>
  </div>
  <div class="row justify-content-center"> 
    <div class="col-md-1 pt-3">
      <%= link_to 'Delete', admin_notice_path(@notice), method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
</div>