<!--M:Indent fixed-->
<div class="container">
  <div class="row pt-5 pb-3 justify-content-center">  
      <div class="col-md-6 text-center">
        <h3>*Events*</h3>
        <h6 class="pt-3"><%= t(".title") %></h6>
        <h6>Make some friends to share memories in Japan! </h6>
      </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="row pb-3">
        <table>
          <tr class="border-bottom">
            <th class="col-md-3  pb-1">Created by</th>
            <th class="col-md-3  pb-1">Title</th>
            <th class="col-md-4  pb-1">Caption</th>
            <th>Joined Members</th>
          </tr>
          <% @events.each do |event| %>  
          ã€€<tr class="border-bottom">
              <td class="col-md-3 py-1">
                <%= event.owner.full_name %>
              </td>
              <td class="col-md-3 py-1">
                <u><%= link_to event.title, admin_event_path(event), class:'text-dark' %></u>
              </td>
              <td class="col-md-4 py-1">
                <%= event.caption.truncate(35) %>
              </td>
              <td class="text-center py-1">
                <%= event.users.count %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>
  <div class="row justify-content-center pb-3">
    <%= paginate @events %>
  </div>
</div>