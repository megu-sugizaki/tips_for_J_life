<!--M:Indent fixed-->
<div class="container-fluid">
  <% flash.each do |key, value| %>
    <% if key == 'alert' %>
      <div class="alert alert-danger text-center">
        <%= value %>
      </div>
    <% elsif key == 'notice' %>
      <div class="alert alert-success text-center">
        <%= value %>
      </div>
    <% end %>
  <% end %>
</div>
<div class="container mt-5">
  <div class="row mt-3 mb-3">  
    <h3>*Sign in*</h3>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class:"col-md-4 pr-3">Email</div>
      <div class="col-lg-3 mb-2 ml-5"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %></div>
    </div>
    <div class="row">
      <div class:"col-md-4">Passwords</div>
      <div class="col-lg-3 mb-2 ml-2"><%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %></div>
    </div>
    <div class="row">
      <div class="col-lg-3 "></div>
      <%= f.submit "Sign in",class: "btn btn-sm btn-info px-5 mb-2 " %>
    </div>
  <% end %>
</div>